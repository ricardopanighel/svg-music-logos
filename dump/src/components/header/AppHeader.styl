  background-position: right
  transition: all 1s ease
  font-weight: 300
  margin-bottom: 10px

  &:focus
    background-color: rgba(255, 255, 255, .9)
    border-color: #FFF
    outline: none

.filter
  text-align: right
  color: #FFF
  font-size: 1.5rem
  font-weight: 300

.select
  appearance: none
  font-size: 1rem
  font-weight: 300
  letter-spacing: .009rem
  padding: .4rem
  border: none
  background: transparent url("./arrow.svg") center right no-repeat
  padding-right: 20px
  background-size: 18px 18px
  color: white
  margin-bottom: 20px

  option
    color: black
