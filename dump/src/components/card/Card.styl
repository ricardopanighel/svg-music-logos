.card
  margin-bottom: 20px
  box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.2)
  display: flex
  flex: 0 100%
  padding: 20px
  flex-direction: column
  background: rgba(255,255,255,.8)

  &--inverse
    background: rgba(0,0,0,.82)
    color: #FFF

  @media only screen and (min-width: 48em)
    flex: 0 (96/3)%

  &-container
    padding: 0 20px
    position: relative
    z-index: 1
    display: flex
    flex-wrap: wrap
    justify-content: space-around

    @media only screen and (min-width: 1000px)
      padding: 0
      margin: auto
      max-width: 1000px

  &__content
    flex: 1

    p
      margin: .4rem 0
      line-height: 1rem

  &__title
    font-size: 1.2rem
    color: grey
    font-weight: 300
    margin: .1rem 0

  &__link
    color: inherit
    text-decoration: underline

  &__footer
    padding-top: 20px
    text-align: center

  &__button
    background: none
    box-shadow: 100 100 100 #000
    border: 2px solid complement(#1fc8db)
    color: complement(#1fc8db)
    padding: .5rem .6rem
    border-radius: 3px
    transition: all 1s ease
    cursor: pointer

    &:hover
      background: complement(#1fc8db)
      color: #FFF

